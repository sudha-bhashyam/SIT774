{
  "name": "sit774-app",
  "version": "1.0.0",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --ci",
    "lint": "eslint . --ext .js --format junit -o reports/eslint-junit.xml || true",
    "dup": "jscpd --pattern \"**/*.js\" --ignore \"**/node_modules/**,**/dist/**,**/.pack/**,**/reports/**\" --reporters xml --output reports/jscpd || true",
    "sec_audit": "npm audit --omit=dev --json > reports/npm-audit.json || true",
    "sec_retire": "npx retire --path . --package --outputformat json --outputpath reports/retire.json || true",
    "security": "\"npm run sec_audit && npm run sec_retire && node tools/security-summary.js\""
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-junit": "^1.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jscpd": "^4.0.5",
    "retire": "^5.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/.pack/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
